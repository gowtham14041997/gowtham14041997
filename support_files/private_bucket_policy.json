{
  "Version": "2012-10-17",
  "Id": "VpcSourceIp",
  "Statement": [
    {
      "Sid": "VpcSourceIp",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "${aws_s3_bucket.epam_private_bucket.arn}",
        "${aws_s3_bucket.epam_private_bucket.arn}/*"
      ],
      "Condition": {
        "IpAddress": {
          "aws:VpcSourceIp": ["10.0.1.0/24"]             
          }
      }
    }
  ]
}
  